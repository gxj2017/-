/* pages/evaluateList/evaluateList.wxss */

.evaluate_box {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(230, 230, 230, 1);
}

.evaluate_kind {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.evaluate_kind text {
  padding: 5rpx 15rpx;
  background: rgba(217, 54, 82, 0.2);
  border-radius: 17rpx;
  margin: 10rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(217, 54, 82, 1);
}

.evaluate_kind .active {
  color: #fff;
  background-color: rgba(217, 54, 82, 0.75);
}

.evaluate_list {
  padding: 0 30rpx;
  box-sizing: border-box;
}

.list_box{
  border-bottom: 1rpx solid rgba(230, 230, 230, 1);
  padding-bottom: 20rpx;
  margin-top: 30rpx;
}

.list {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.haider {
  display: flex;
}

.haider image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.haider .title text {
  display: block;
}

.haider .title text:nth-of-type(1) {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(33, 33, 33, 1);
}

.haider .title text:nth-of-type(2) {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(166, 166, 166, 1);
}

.time {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(166, 166, 166, 1);
}

.content .tex {
  display: block;
  width: 100%;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(33, 33, 33, 1);
  line-height: 36rpx;
  margin-top: 20rpx;
}

.content .img {
  display: flex;
  margin-top: 20rpx;
  justify-content: space-between;
}

.content .img image {
  width: 215rpx;
  height: 180rpx;
  border-radius: 10rpx;
}
