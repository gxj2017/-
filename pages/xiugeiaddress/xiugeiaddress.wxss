
page {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}

.addAddress {
  box-sizing: border-box;
  border-top: 2rpx solid #f5f5f5;
  margin-top: 20rpx;
}

.section {
  width: 100%;
  border-bottom: 2rpx solid #f5f5f5;
  background-color: #fff;
}

.section label {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 30rpx;
}

.section label text {
  width: 150rpx;
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(149, 149, 149, 1);
}

.section label input {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.section textarea {
  font-size: 28rpx;
  font-weight: 100;
  color: #000;
  padding: 20rpx 30rpx 0;
  height: 150rpx;
}

.section_gap {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 20rpx;
}

.section__title {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(1, 1, 1, 1);
}

.btn-area {
  padding: 100rpx 30rpx 0;
}

.btn-area button {
  width: 100%;
  height: 86rpx;
  background: rgba(217, 54, 82, 1);
  border-radius: 43rpx;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wx-switch-input {
  background: #d93652 !important;
  border: 2rpx solid #DEDEDE !important;
}
