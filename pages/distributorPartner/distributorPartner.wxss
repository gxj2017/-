/* pages/distributorPartner/distributorPartner.wxss */

.distributorPartner_box {
  padding: 30rpx;
  box-sizing: border-box;
}

.distributorPartner_box .title {
  display: block;
  text-align: center;
  font-size: 86rpx;
  font-weight: bold;
  color: rgba(217, 54, 82, 1);
  margin-top: 65rpx;
}

.img {
  widows: 100%;
  text-align: center;
  margin-top: 100rpx;
}

.img image {
  width: 329rpx;
  height: 366rpx;
}

button {
  width: 529rpx;
  height: 86rpx;
  line-height: 86rpx;
  background: rgba(217, 54, 82, 1);
  border: 2rpx solid rgba(191, 191, 191, 1);
  border-radius: 11rpx;
  color: #fff;
  margin-top: 100rpx;
}

.distributorPartner {
  display: block;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(133, 133, 133, 1);
  margin-top: 180rpx;
}

.distributorPartner_box .text {
  display: block;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(133, 133, 133, 1);
  margin-top: 20rpx;
}

.DistributionGoods{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.product {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
}

.navbar {
  flex: none;
  display: flex;
  background: #fff;
  overflow: hidden;
  white-space: nowrap;
  height: 60rpx;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 60rpx;
  font-size: 14px;
  padding: 0 20rpx;
  width: 150rpx!important;
}
/* 顶部导航字体颜色 */

.navbar .item.active {
  color: #e1007e;
}

/* 顶部指示条属性 */

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 5rpx;
  background: #e1007e;
  width: 70%;
  margin: 0px auto;
}

.cells {
  padding-left: 2rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
}
.cells_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.cells_item image{
  width: 312rpx;
  height: 312rpx;
  border-radius: 8rpx;
  background: #f4f4f4;
}

.cells navigator {
  display: flex;
  margin-bottom:20rpx; 
}

.cells navigator image {
  width: 312rpx;
  height: 312rpx;
  margin-right: 32rpx;
}

.cells_text {
  position: relative;
  width: 340rpx;
  height: 312rpx;
}

.cells_text .describe {
  margin-top: 30rpx;
  width: 340rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.price {
  width: 100%;
  display: flex;
  align-items:baseline ;
  justify-content: space-between;
  position: absolute;
  bottom: 30rpx;
  
}

.price text:nth-of-type(1) {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(217, 54, 82, 1);
}

.price text:nth-of-type(2) {
  width: 117rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  background:linear-gradient(-89deg,rgb(228, 150, 150),rgba(255,51,54,1),rgba(255,115,122,1));
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.price1 {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: space-between;
  justify-content: space-between;
  position: absolute;
  bottom: 30rpx;
}
.price1 text:nth-of-type(1) {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(217, 54, 82, 1);
}

.price1 text:nth-of-type(2) {
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  background:linear-gradient(-89deg,rgb(228, 150, 150),rgba(255,51,54,1),rgba(255,115,122,1));
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin-top: 20rpx;
}
