.site .commodity {
  display: flex;
}

.site .commodity image {
  width: 140rpx;
  height: 140rpx;
  margin: 0 20rpx 0 0;
}

.site .commodity text {
  display: block;
}

.site .commodity text:nth-of-type(1) {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.site .commodity text:nth-of-type(2) {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(133, 133, 133, 1);
  margin-top: 50rpx;
}

.commodity_Sp {
  margin-top: 50rpx;
}

.commodity_Sp>text {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.SpList {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.SpList text {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(217, 54, 82, 1);
  border: 2rpx solid rgba(217, 54, 82, 1);
  border-radius: 4rpx;
  padding: 10rpx;
  margin: 10rpx;
}
.select_sp {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  margin-top: 30rpx;
}

.select_sp .left text {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.select_sp .left text:nth-of-type(2) {
  color: rgba(217, 54, 82, 1);
  margin-left: 30rpx;
}

.select_sp .right {
  display: flex;
}

.select_sp .right text {
  display: block;
  width: 46rpx;
  height: 46rpx;
  text-align: center;
  line-height: 38rpx;
  border: 1rpx solid #bababa;
  font-weight: 800;
  font-size: 32rpx;
}

.select_sp .right input {
  height: 46rpx;
  width: 60rpx;
  text-align: center;
}
