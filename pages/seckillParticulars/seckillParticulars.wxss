page{
  width: 100%;
  height: 100%;
}
.page_container{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.max_box{
  height: 100%;
  flex: 1;
  overflow-y: auto;
}
.slides {
  width: 100%;
  height: 624rpx;
}
.slides swiper-item {
  width: 100%;
  height: 100%;
}
.select .two text{
  color: #D93652;
}
.slides swiper-item image {
  width: 100%;
  height: 100%;
}

.Particulars {
  width: 100%;
  background: rgba(255, 255, 255, 1);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 30rpx solid #fafafa;
}

.Particulars .title {
  display: block;
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(33, 33, 33, 1);
  line-height: 39rpx;
}

.price {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.price .xianjia {
  margin-top: 5rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(217, 54, 82, 1);
}
.price .yuanjia {
  margin-top: 5rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #666;
  text-decoration: line-through;
}
.amount {
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(133, 133, 133, 1);
}

.amount .yip_shl {
  color: #d93652;
}

.select {
  border-bottom: 30rpx solid #fafafa;
}

.select>view {
  display: flex;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.select .site_wm, .select .specification {
  border-bottom: 2rpx solid #e6e6e6;
}

.select .one {
  display: block;
  width: 100rpx;
  height: 100%;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(133, 133, 133, 1);
}

.select .one1 {
  display: block;
  width: 280rpx;
  height: 100%;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(133, 133, 133, 1);
}

.select .two {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  width: 573rpx;
  overflow: hidden;
}

.select .three {
  display: block;
  width: 50rpx;
}

.evaluate {
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  height: 70rpx;
  line-height: 70rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #e6e6e6;
}

.examine {
  margin-bottom: 5rpx;
}

.evaluate .sp {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(31, 31, 31, 1);
}

.examine .look {
  display: inline-block;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(158, 157, 157, 1);
}

.examine .right {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(158, 157, 157, 1);
}

.comment {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
}

.comment text {
  display: block;
  height: 34rpx;
  background: rgba(217, 54, 82, 0.3);
  border-radius: 17rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(217, 54, 82, 1);
  padding: 4rpx 10rpx;
}

.user_com {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.user_xinxi {
  display: flex;
}

.user_xinxi text {
  height: 26rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(33, 33, 33, 1);
  line-height: 54rpx;
}

.user_xinxi image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}

.user_text .text {
  display: block;
  height: 62rpx;
  max-height: 72rpx;
  overflow: hidden;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(33, 33, 33, 1);
  line-height: 36rpx;
  margin-top: 19rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e6e6e6;
}

.user_text {
  margin-bottom: 20rpx;
}
.image_text_detail{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.image_text .title {
  display: block;
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(217, 54, 82, 1);
}

.image_text image {
  width: 100%!important;
  height: 1149rpx;
  margin-bottom: 20rpx;
}

.buy {
  width: 100%;
  height: 96rpx;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}

.buy_left {
  display: flex;
}


.service, .collect {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.service image, .collect image {
  display: block;
  width: 46rpx;
  height: 46rpx;
  margin-top: 17rpx;
}
.service image {
  flex-shrink: 0;
}


.collect text {
  display: block;
  margin-top: -3rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: rgba(42, 42, 42, 1);
}
.service text {
  display: block;
  margin-top: -14rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: rgba(42, 42, 42, 1);
}

.buy_right {
  width: 480rpx;
  height: 96rpx;
  background: linear-gradient(-45deg, rgba(255, 78, 16, 1), rgba(253, 164, 50, 1));
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 26rpx;
}
.buy_right .two{
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.Product_Parameter {
  width: 750rpx;
  position: fixed;
  z-index: 2;
  background-color: #fff;
  bottom: 0;
  padding: 20rpx 26rpx;
  box-sizing: border-box;
}

.shut {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.shut text {
  display: block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(245, 245, 245, 1);
  text-align: center;
  line-height: 40rpx;
  color: rgba(155, 155, 155, 1);
  font-size: 20rpx;
}

.Product_data {
  display: flex;
  height: 90rpx;
  border-bottom: 2rpx solid rgba(238, 238, 238, 1);
  line-height: 90rpx;
}

.Product_Parameter .title {
  display: block;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.Product_data text:nth-of-type(1) {
  display: block;
  width: 170rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(133, 133, 133, 1);
}

.Product_data text:nth-of-type(2) {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.site {
  width: 750rpx;
  background-color: #fff;
  bottom: 0;
  padding: 20rpx 26rpx;
  box-sizing: border-box;
  border-bottom: 20rpx solid rgba(245, 245, 245, 1);
}

.shut .title {
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-right: 246rpx;
}

.service{
  border: 0rpx;
  background: #fff;
}
button::after{
  border: 0rpx;
}

