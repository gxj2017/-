  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 2;
  background-color: rgba(0, 0, 0, 0.5);
  bottom: 0;
}
.tk_box_pop{
  width: 750rpx;
  height: 790rpx;
  position: fixed;
  z-index: 2;
  background-color: #fff;
  bottom: 0;
}
.tk_box button {
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  background: rgba(217, 54, 82, 1);
  border-radius: 0;
