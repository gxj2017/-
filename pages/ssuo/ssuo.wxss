/* pages/ssuo/ssuo.wxss */
.searchpage{
  width: 100%;
  height: 100%;
}
.search {
  padding: 36rpx 30rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #bfbfbf;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search input {
  background: rgba(245, 245, 245, 1);
  border: 1rpx solid rgba(209, 209, 209, 1);
  border-radius: 31rpx;
  height: 61rpx;
  font-size: 24rpx;
  color: rgba(133, 133, 133, 1);
  width: 580rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.search text {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  padding: 0;
  margin: 0;
  border: 0;
}

.product {
  width: 100%;
  background-color: #fff;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}

.cells {
  padding-left: 2rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
}

.cells .cells_item {
  display: flex;
  margin-bottom: 20rpx;
}

.cells .cells_item image {
  width: 312rpx;
  height: 312rpx;
  margin-right: 32rpx;
  background: #f4f4f4;
}

.cells_text {
  position: relative;
  width: 330rpx;
  height: 312rpx;
}

.cells_text .describe {
  width: 340rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.price {
  width: 100%;
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  position: absolute;
  bottom: 10rpx;
}

.price .one {
  font-size: 35rpx;
  font-weight: bold;
  color: rgba(217, 54, 82, 1);
}

.price .three {
  width: 117rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  background: linear-gradient(-89deg, rgb(228, 150, 150), rgba(255, 51, 54, 1), rgba(255, 115, 122, 1));
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}
.price .btn{
  display: flex;
  flex-direction: column;
}
.price .btn text{
  margin-bottom: 10rpx;
}

.joint text {
  display: block;
}

.price .two {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(133, 133, 133, 1);
  margin-top: 20rpx;
}

.history .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history .title>text {
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
}

.history .title view {
  display: flex;
  align-items: center;
}

.history .title view image {
  width: 30rpx;
  height: 30rpx;
}

.history .title view text {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(134, 134, 134, 1);
}

.noun {
  display: flex;
  flex-wrap: wrap;
}

.noun text {
  height: 50rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 25rpx;
  padding: 0rpx 20rpx;
  margin: 10rpx 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(77, 77, 77, 1);
  display: flex;
  align-items: center;
}
