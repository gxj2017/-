/* pages/group/group.wxss */
page{
  width: 100%;
  height: 100%;
}
.page{
  width: 100%;
  height: 100%;
}
.product {
  width: 100%;
  background-color: #fff;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}

.navbar {
  flex: none;
  display: flex;
  background: #fff;
  overflow: hidden;
  white-space: nowrap;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
  font-weight: bold;
  color: rgba(133, 133, 133, 1);
}

/* 顶部导航字体颜色 */

.navbar .item.active {
  color: #d93652;
}

/* 顶部指示条属性 */

.product .navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 5rpx;
  background: #d93652;
  width: 50%;
  margin: 0px auto;
}

.team {
  width: 100%;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.team .navbar {
  margin-top: 20rpx;
  padding: 0rpx 20rpx;
  display: flex;
  justify-content: space-between;
}

.team .navbar .item {
  display: flex;
  flex: none;
  line-height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
}

.team .navbar .item.active:after {
  height: 0;
}

.team .navbar .item.active {
  background-color: #d93652;
  color: #fff;
  border-radius: 24rpx;
  text-align: center;
}

.team_box {
  height: 100%;
  box-sizing: border-box;
  padding: 14rpx 30rpx 0rpx;
  border-top: 20rpx solid #fafafa;
}

.team_list{
  margin-bottom: 50rpx;
}

.team_list .team_name {
  display: flex;
  justify-content: space-between;
}

.team_name text:nth-of-type(1) {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.team_name text:nth-of-type(2) {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(217, 54, 82, 1);
}

.commodity {
  display: flex;
  margin-top: 30rpx;
}

.commodity .left {
  width: 179rpx;
  height: 179rpx;
  position: relative;
  margin-right: 30rpx;
}

.commodity .left  image {
  width: 100%;
  height: 100%;
}

.commodity .left text {
  display: block;
  /* width: 97rpx; */
  padding-right: 10rpx;
  height: 41rpx;
  background: rgba(255, 171, 51, 1);
  position: absolute;
  top: 0;
  left: 0;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  border-radius: 0 20rpx 20rpx 0;
}

.commodity .right {
  position: relative;
}

.right text:nth-of-type(1) {
  display: block;
  width: 479rpx;
  height: 110rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(33, 33, 33, 1);
  line-height: 39rpx;
  overflow: hidden;
}

.right text:nth-of-type(2) {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(217, 54, 82, 1);
}

.right text:nth-of-type(3) {
  position: absolute;
  right: 0;
  bottom: 0;
  display: block;
  /* width: 149rpx; */
  padding: 0rpx 10rpx;
  height: 50rpx;
  background: rgba(217, 54, 82, 1);
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 50rpx;
}
.dataNull{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.dataNull image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.dataNull text{
  font-size: 28rpx;
  color: #666;
}
