/* pages/WithdrawalRecord/WithdrawalRecord.wxss */

.WithdrawalRecord_box {
  width: 100%;
  height: 154rpx;
  background: rgba(245, 245, 245, 1);
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
}

.picker {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(64, 64, 64, 1);
  margin-bottom: 20rpx;
}

.money {
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(64, 64, 64, 1);
}

.withdraw {
  width: 100%;
  margin-top: 160rpx;
}

.list {
  width: 100%;
  height: 128rpx;
  border-bottom: 1rpx solid rgba(207, 207, 207, 1);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.title {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 10rpx;
}

.time {
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(143, 143, 143, 1);
}
