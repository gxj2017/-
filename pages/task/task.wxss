/* pages/task/task.wxss */
page{
  width: 100%;
  height: 100%;
}
.taskcontainer{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.task {
  width: 100%;
  height: 360rpx;
  position: relative;
}

.task image {
  width: 100%;
  height: 100%;
}

.task .one {
  display: block;
  font-size: 70rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  position: Absolute;
  top: 105rpx;
  right: 28rpx;
}

.task .two {
  display: block;
  position: absolute;
  bottom: 100rpx;
  right: 104rpx;
  background: linear-gradient(83deg, rgba(249, 76, 53, 1) 0%, rgba(226, 98, 149, 0.49) 51%, rgba(200, 49, 174, 0) 100%);
  border-radius: 22rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  padding-left: 14rpx;
}

.task .one1 {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  position: Absolute;
  top: 60rpx;
  left: 30px;
}

.task .two1 {
  display: block;
  position: absolute;
  bottom: 100rpx;
  right: 104rpx;
  background: linear-gradient(83deg, rgba(249, 76, 53, 1) 0%, rgba(226, 98, 149, 0.49) 51%, rgba(200, 49, 174, 0) 100%);
  border-radius: 22rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  padding-left: 14rpx;
}

.mission_box {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.mission {
  width: 684rpx;
  height: 795rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 9rpx 27rpx 0rpx rgba(205, 205, 205, 0.9);
  border-radius: 12rpx;
  position: relative;
  top: -40rpx;
}

.explain .title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.explain .text {
  display: block;
  width: 100%;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 55rpx;
}

.mission {
  padding: 0 30rpx;
  box-sizing: border-box;
  overflow-x: scroll;
}

.mis{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid rgba(230,230,230,1);
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.mission_left {
  display: flex;
  padding: 10rpx 0;
  width: 480rpx;
  box-sizing: border-box;
}
.mission_left1 {
  display: flex;
  padding: 10rpx 0;
  width: 480rpx;
  box-sizing: border-box;
}

.mission_left>image {
  width: 33px;
  height: 64px;
  margin: 8rpx 30rpx 8rpx 0rpx;
  flex-shrink: 0;
}
.mission_left1>image {
  width: 33px;
  height: 64px;
  margin: 8rpx 30rpx 8rpx 0rpx;
  flex-shrink: 0;
}

.huod_box {
  width: 380rpx;
  line-height: 42rpx;
}

.huod_box text {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(1, 1, 1, 1);
}

.huod_box icon {
  width: 42rpx;
  height: 42rpx;
  margin-bottom: -10rpx;
  padding: 0 10rpx 0rpx 20rpx;
  color: #FFC300;
  font-size: 32rpx;
}

.progress_box {
  width: 220rpx;
  height: 20rpx;
  background: rgba(252, 159, 161, 1);
  border-radius: 10rpx;
  display: flex;
  margin-top: 20rpx;
}

.progress {
  width: 101rpx;
  height: 20rpx;
  background: linear-gradient(-89deg, rgb(189, 3, 3), rgba(255, 51, 54, 1), rgba(255, 115, 122, 1));
  border-radius: 10rpx;
}

.progress_box text {
  font-size: 20rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 20rpx;
}
.mission_right navigator {
  display: block;
  width: 117rpx;
  /* padding: 0rpx 8rpx; */
  height: 46rpx;
  border-radius: 23rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 46rpx;
  white-space: nowrap;
}
.mission_right1 navigator {
  display: block;
  /* width: 117rpx; */
  padding: 0rpx 8rpx;
  height: 46rpx;
  border-radius: 23rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 46rpx;
  white-space: nowrap;
}


.mission_right navigator:nth-of-type(1){
  background: rgba(47, 161, 253, 1);
}

.mission_right navigator:nth-of-type(2){
  background-color: #FF474B;
  margin-top: 20rpx;
}

.mission_right1 navigator:nth-of-type(1){
  background: rgba(47, 161, 253, 1);
}

.mission_right1 navigator:nth-of-type(2){
  background-color: #FF474B;
  margin-top: 20rpx;
}

.dataNull{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.dataNull image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.dataNull text{
  font-size: 28rpx;
  color: #666;
}