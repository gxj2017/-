/* pages/balance/balance.wxss */

page {
  background-color: #fafafa;
  width: 100%;
  height: 100%;
}

.balance {
  width: 100%;
  height: 263rpx;
  background: rgba(255, 255, 255, 1);
  margin-top: 40rpx;
  border-top: 1rpx solid #bfbfbf;
  border-bottom: 1rpx solid #bfbfbf;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.balance>text {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.Withdrawal {
  display: flex;
  justify-content: space-between;
  margin-top: 48rpx;
}

.Record text:nth-of-type(1) {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.Record text:nth-of-type(2) {
  font-size: 77rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.withdraw {
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-top: 20rpx;
}

.withdraw text:nth-of-type(1) {
  margin-right: 20rpx;
}

.record navigator{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(201, 201, 201, 1);
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 0 30rpx;
}
