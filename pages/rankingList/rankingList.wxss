/* pages/rankingList/rankingList.wxss */

page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.rankingList_box {
  width: 100%;
  height: 284rpx;
  position: relative;
}

.rankingList_box>image {
  width: 100%;
  height: 100%;
}

.rankingList {
  display: flex;
  position: absolute;
  top: 20rpx;
  left: 300rpx;
}

.rankingList image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.message {
  display: flex;
  flex-direction: column;
}

.rankingList .one {
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  margin-right: 100rpx;
  margin-top: 137rpx;
}

.rankingList .name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin-top: 20rpx;
}

.rankingList .three {
  font-size: 60rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  padding-right: 10rpx;
}

.rankingList .two {
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  margin-top: 104rpx;
}

.message {
  margin-right: 100rpx;
}

.list_box {
  width: 100%;
  flex: 1;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.list {
  width: 100%;
  height: 910rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 0rpx 13rpx 0rpx rgba(0, 0, 0, 0.51);
  border-radius: 8rpx;
  position: relative;
  top: -30rpx;
  z-index: 999999;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  overflow-x: scroll;
}

.ranking {
  display: flex;
  justify-content: space-between;
  height: 84rpx;
  align-items: center;
  padding: 20rpx 0;
}

.ranking .wancheng {
  font-size: 28rpx;
  font-weight: bold;
}

.rev {
  color: rgba(217, 54, 82, 1);
}

.hs {
  color: rgba(133, 133, 133, 1);
}

.list_zhanshi {
  display: flex;
  height: 84rpx;
  align-items: center;
}

.list_zhanshi image {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.list_zhanshi>view {
  width: 48rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
}

.list_zhanshi .name {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.dataNull{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.dataNull image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.dataNull text{
  font-size: 28rpx;
  color: #666;
}
