/* pages/auction/auction.wxss */

.auction_box {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.auction_min{
  margin-bottom: 40rpx;
}
.auction_box image {
  width: 100%;
  overflow: hidden;
  border-radius: 8rpx;
}

.auction_box .title {
  display: block;
  max-height: 70rpx;
  font-size: 28rpx;
  overflow: hidden;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 20rpx;
}

.auction {
  display: flex;
  justify-content: space-between;
}

.picImage{
  width: 100%;
  height: 312rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}

.auction view text:nth-of-type(1) {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(217, 54, 82, 1);
  margin-right: 20rpx;
}

.auction view text:nth-of-type(2) {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.auction button {
  display: block;
  width: 117rpx;
  height: 44rpx;
  background: rgba(217, 54, 82, 1);
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  padding: 0;
  margin: 0;
  line-height: 44rpx;
  text-align: center;
  margin-top: 5rpx;
}
