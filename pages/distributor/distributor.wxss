/* pages/distributor/distributor.wxss */
page{
  width: 100%;
  height: 100%;
}
.search {
  padding: 36rpx 30rpx 0rpx;
  box-sizing: border-box;
}

.search input {
  background: rgba(245, 245, 245, 1);
  border: 1rpx solid rgba(209, 209, 209, 1);
  border-radius: 31rpx;
  height: 61rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(133, 133, 133, 1);
}

.navbar {
  flex: none;
  display: flex;
  background: #fff;
  overflow: hidden;
  white-space: nowrap;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 14px;
  padding: 0 20rpx;
}

/* 顶部导航字体颜色 */

.navbar .item.active {
  color: #e1007e;
}

/* 顶部指示条属性 */

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 5rpx;
  background: #e1007e;
  width: 35%;
  margin: 0px auto;
}

.distributor_box {
  padding: 0 30rpx 0 35rpx;
  border-top: 1rpx solid #f4f4f4;
}

.distributorList {
  width: 100%;
  padding: 30rpx 0rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f4f4f4;
}

.distributorList image {
  width: 84rpx;
  height: 84rpx;
  margin-right: 30rpx;
  background: #eee;
}

.list_box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.list_top {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.list_name{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list_name text:nth-of-type(1) {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  white-space: nowrap;
  margin-right: 20rpx;
}

.list_name text:nth-of-type(2) {
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(217, 54, 82, 1);
  padding-right: 30rpx;
}

.list_top>text {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(217, 54, 82, 1);
}

.list_bottom text {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(143, 143, 143, 1);
}


.dataNull{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.dataNull image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.dataNull text{
  font-size: 28rpx;
  color: #666;
}
